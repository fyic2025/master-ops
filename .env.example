# Master-Ops Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to version control

# ============================================================================
# SUPABASE CONFIGURATION
# ============================================================================
# Get these values from: https://supabase.com/dashboard/project/[your-project]/settings/api

# Your Supabase project URL
SUPABASE_URL=https://your-project-id.supabase.co

# Public anon key (safe to use client-side)
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.your-anon-key-here

# Service role key (NEVER expose client-side - server/n8n only)
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.your-service-role-key-here

# Optional: Direct database connection string
# DATABASE_URL=postgresql://postgres:[password]@db.[project-id].supabase.co:5432/postgres

# ============================================================================
# N8N CONFIGURATION
# ============================================================================
# Get these values from: https://your-n8n-instance.com/settings/api

# Your n8n instance base URL (no trailing slash)
N8N_BASE_URL=https://your-n8n-instance.com

# n8n API key (generate in n8n: Settings → API → Create API Key)
N8N_API_KEY=n8n_api_xxxxxxxxxxxxxxxxxxxxxxxx

# Optional: Webhook base URL (for receiving webhooks from external services)
# N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook

# ============================================================================
# APIFY WEB SCRAPING (Lead Generation)
# ============================================================================
# Get these from: https://console.apify.com/account/integrations

# Apify API token for web scraping actors
APIFY_TOKEN=apify_api_your-token-here

# ============================================================================
# SMARTLEAD CONFIGURATION (Optional - for email campaigns)
# ============================================================================
# SMARTLEAD_API_KEY=your-smartlead-api-key
# SMARTLEAD_API_URL=https://api.smartlead.ai

# ============================================================================
# UNLEASHED API CREDENTIALS (Inventory Management)
# ============================================================================
# Get these from: Unleashed Software → Settings → API Access

# Teelixir Unleashed Account
TEELIXIR_UNLEASHED_API_ID=your-teelixir-unleashed-api-id
TEELIXIR_UNLEASHED_API_KEY=your-teelixir-unleashed-api-key
TEELIXIR_UNLEASHED_API_URL=https://api.unleashedsoftware.com

# Elevate/KIK Unleashed Account
ELEVATE_UNLEASHED_API_ID=your-elevate-unleashed-api-id
ELEVATE_UNLEASHED_API_KEY=your-elevate-unleashed-api-key
ELEVATE_UNLEASHED_API_URL=https://api.unleashedsoftware.com

# ============================================================================
# SHOPIFY API CREDENTIALS
# ============================================================================
# Get these from: Shopify Admin → Settings → Apps → Develop apps

# Teelixir Shopify
TEELIXIR_SHOPIFY_SHOP_DOMAIN=teelixir.com.au
TEELIXIR_SHOPIFY_ACCESS_TOKEN=your-teelixir-shopify-access-token
TEELIXIR_SHOPIFY_API_VERSION=2024-01
TEELIXIR_SHOPIFY_LOCATION_ID=your-location-id

# Elevate Shopify
ELEVATE_SHOPIFY_STORE_URL=elevatewholesale.myshopify.com
ELEVATE_SHOPIFY_ACCESS_TOKEN=your-elevate-shopify-access-token
ELEVATE_SHOPIFY_API_VERSION=2024-10
ELEVATE_SHOPIFY_LOCATION_ID=your-location-id

