# Elevate Wholesale - Environment Variables
# Copy this file to .env and fill in your actual values

# ===== HubSpot Configuration =====
# Get your private app key from: HubSpot → Settings → Integrations → Private Apps
HUBSPOT_API_KEY=pat-na1-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# Workflow IDs (get from HubSpot workflow URLs)
HUBSPOT_TRIAL_WORKFLOW_ID=12345678

# HubSpot portal/account ID
HUBSPOT_PORTAL_ID=your_portal_id

# ===== Shopify Configuration =====
# Your Shopify store URL (e.g., elevatewholesale.myshopify.com)
SHOPIFY_STORE_URL=your-store.myshopify.com

# Admin API access token (requires: read_customers, write_customers, read_orders, write_orders, read_price_rules, write_price_rules)
SHOPIFY_ACCESS_TOKEN=shpat_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Shopify API version
SHOPIFY_API_VERSION=2024-10

# Shopify storefront domain (customer-facing)
SHOPIFY_STOREFRONT_URL=https://elevatewholesale.com.au

# ===== Unleashed Inventory Configuration =====
# Get from Unleashed → Settings → Integration → API Access
UNLEASHED_API_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
UNLEASHED_API_KEY=your_api_key_here

# Unleashed API endpoint (usually https://api.unleashedsoftware.com)
UNLEASHED_API_URL=https://api.unleashedsoftware.com

# ===== Supabase Configuration =====
# Project URL (from Supabase dashboard)
SUPABASE_URL=https://your-project-ref.supabase.co

# Anonymous/public key (safe for client-side)
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Service role key (NEVER expose client-side, server-only)
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Database direct connection string (optional, for migrations)
DATABASE_URL=postgresql://postgres:[password]@db.[project-ref].supabase.co:5432/postgres

# ===== Gmail API Configuration (Optional) =====
# Only needed if sending emails via Gmail instead of HubSpot
# Get from Google Cloud Console → APIs & Services → Credentials
GMAIL_CLIENT_ID=your-client-id.apps.googleusercontent.com
GMAIL_CLIENT_SECRET=your_client_secret
GMAIL_REFRESH_TOKEN=your_refresh_token

# Email address to send from
GMAIL_FROM_EMAIL=sales@elevatewholesale.com.au
GMAIL_FROM_NAME=Elevate Wholesale

# ===== Trial Configuration =====
# Trial duration in days
TRIAL_DURATION_DAYS=30

# Trial discount settings
TRIAL_DISCOUNT_TYPE=percentage
TRIAL_DISCOUNT_VALUE=10

# Minimum order value for free shipping (AUD)
FREE_SHIPPING_THRESHOLD=300

# Shipping cost for orders under threshold (AUD)
STANDARD_SHIPPING_COST=20

# ===== Webhook Security =====
# Shopify webhook secret (for HMAC validation)
SHOPIFY_WEBHOOK_SECRET=your_webhook_secret

# Google Form webhook secret (custom, for Apps Script)
GOOGLE_FORM_WEBHOOK_SECRET=generate_random_string_here

# ===== Monitoring & Logging =====
# Enable debug logging (true/false)
DEBUG=false

# Sentry DSN for error tracking (optional)
SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx

# Slack webhook for alerts (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/xxx/xxx

# ===== Feature Flags =====
# Enable/disable specific integrations for testing
ENABLE_SHOPIFY_SYNC=true
ENABLE_UNLEASHED_SYNC=true
ENABLE_EMAIL_SENDING=true

# Dry run mode (log actions without executing)
DRY_RUN=false
